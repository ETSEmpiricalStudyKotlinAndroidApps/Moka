<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_activity_main"
    app:startDestination="@id/auth_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="io.github.tonnyl.moka.ui.MainFragment"
        android:label="Main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_to_auth_no_history"
            app:destination="@id/auth_fragment"
            app:popUpTo="@+id/navigation_activity_main"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_to_auth_with_history"
            app:destination="@id/auth_fragment" />

    </fragment>

    <fragment
        android:id="@+id/auth_fragment"
        android:name="io.github.tonnyl.moka.ui.auth.AuthFragment"
        tools:label="Auth"
        tools:layout="@layout/fragment_auth">

        <argument
            android:name="code"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="state"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <deepLink app:uri="tonnyl.io/moka/callback?code={code}&amp;state={state}" />

        <action
            android:id="@+id/action_to_main"
            app:destination="@id/main_fragment"
            app:popUpTo="@+id/navigation_activity_main"
            app:popUpToInclusive="true" />

    </fragment>

</navigation>