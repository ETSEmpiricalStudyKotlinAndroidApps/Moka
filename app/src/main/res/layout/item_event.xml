<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.format.DateUtils" />

        <import type="io.github.tonnyl.moka.ui.profile.ProfileType" />

        <variable
            name="event"
            type="io.github.tonnyl.moka.data.Event" />

        <variable
            name="eventActions"
            type="io.github.tonnyl.moka.ui.timeline.EventActions" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> eventActions.openEventDetails(event)}"
        android:padding="@dimen/list_item_spacing">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/event_user_avatar"
            android:layout_width="@dimen/repository_list_avatar_width"
            android:layout_height="@dimen/repository_list_avatar_height"
            android:onClick="@{() -> eventActions.openProfile(event.actor.login, ProfileType.USER)}"
            app:avatarUrl="@{event.actor.avatarUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <Space
            android:id="@+id/event_space_between_avatar_and_action"
            android:layout_width="@dimen/fragment_content_padding"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/event_user_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/event_action"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:hyphenationFrequency="full"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorTextPrimary"
            app:eventActionTextFuture="@{event}"
            app:eventActions="@{eventActions}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/event_space_between_avatar_and_action"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            tools:text="TonnyL starred PaperPlane" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/event_content"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hyphenationFrequency="none"
            android:maxLines="8"
            app:eventContentVisibilityOrTextFuture="@{event}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/event_space_between_avatar_and_action"
            app:layout_constraintTop_toBottomOf="@id/event_action"
            tools:text="@tools:sample/lorem[49]" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/event_create_time"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hyphenationFrequency="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/event_space_between_avatar_and_action"
            app:layout_constraintTop_toBottomOf="@id/event_content"
            app:textFuture="@{DateUtils.getRelativeTimeSpanString(event.createdAt.time, System.currentTimeMillis(), DateUtils.MINUTE_IN_MILLIS)}"
            tools:text="@tools:sample/date/hhmmss" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>