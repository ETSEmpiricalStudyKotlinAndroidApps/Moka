<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_activity_main"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="io.github.tonnyl.moka.ui.MainFragment"
        android:label="Main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_to_auth_no_history"
            app:destination="@id/auth_fragment"
            app:popUpTo="@+id/navigation_activity_main"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_to_auth_with_history"
            app:destination="@id/auth_fragment" />

    </fragment>


</navigation>