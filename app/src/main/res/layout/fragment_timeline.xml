<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="io.github.tonnyl.moka.network.Status" />

        <import type="io.github.tonnyl.moka.ui.MainViewModel" />

        <import type="io.github.tonnyl.moka.ui.timeline.TimelineViewModel" />

        <import type="io.github.tonnyl.moka.ui.EmptyViewActions" />

        <variable
            name="mainViewModel"
            type="MainViewModel" />

        <variable
            name="viewModel"
            type="TimelineViewModel" />

        <variable
            name="emptyViewActions"
            type="EmptyViewActions" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/main_search_bar"
            layout="@layout/layout_main_search_bar"
            bind:mainViewModel="@{mainViewModel}" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/main_search_bar_height"
            app:bindRefreshing="@{viewModel.initialLoadStatus.status == Status.LOADING}"
            app:colorSchemaColors="@{@intArray/swipe_refresh}">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    style="@style/RecyclerViewStyle"
                    tools:listitem="@layout/item_event" />

                <include
                    android:id="@+id/empty_content"
                    layout="@layout/layout_empty_content"
                    bind:actionString="@{@string/timeline_content_empty_action}"
                    bind:actions="@{emptyViewActions}"
                    bind:goneUnless="@{viewModel.initialLoadStatus != null &amp;&amp; viewModel.initialLoadStatus.status != Status.LOADING &amp;&amp; !viewModel.initialLoadStatus.data}"
                    bind:iconDrawable="@{@drawable/ic_menu_timeline_24}"
                    bind:titleString="@{viewModel.initialLoadStatus.data &amp;&amp; viewModel.initialLoadStatus.status == Status.ERROR ? @string/common_error_requesting_data : @string/timeline_content_empty_title}" />

            </FrameLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>