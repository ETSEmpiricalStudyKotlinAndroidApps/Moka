<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_fragment_main_graph"
    app:startDestination="@id/nav_timeline">

    <activity
        android:id="@+id/auth_activity"
        android:name="io.github.tonnyl.moka.ui.auth.AuthActivity"
        tools:label="Auth Activity" />

    <fragment
        android:id="@+id/search_fragment"
        android:name="io.github.tonnyl.moka.ui.search.SearchFragment"
        tools:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/nav_timeline"
        android:name="io.github.tonnyl.moka.ui.timeline.TimelineFragment"
        tools:label="Timeline"
        tools:layout="@layout/fragment_timeline" />

    <fragment
        android:id="@id/nav_explore"
        android:name="io.github.tonnyl.moka.ui.explore.ExploreFragment"
        tools:label="Explore"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@id/nav_inbox"
        android:name="io.github.tonnyl.moka.ui.inbox.InboxFragment"
        android:label="Inbox"
        tools:layout="@layout/fragment_inbox" />

    <fragment
        android:id="@id/nav_projects"
        android:name="io.github.tonnyl.moka.ui.projects.ProjectsFragment"
        android:label="Projects"
        tools:layout="@layout/fragment_projects">

        <argument
            android:name="login"
            android:defaultValue=""
            app:argType="string" />

        <!--if the projects don't belong to a repository, set this
        argument an empty string-->
        <argument
            android:name="repository_name"
            android:defaultValue=""
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="projects_type"
            android:defaultValue="UsersProjects"
            app:argType="io.github.tonnyl.moka.ui.projects.ProjectsType" />

    </fragment>

    <fragment
        android:id="@id/nav_settings"
        android:name="io.github.tonnyl.moka.ui.settings.SettingsFragment"
        android:label="Settings" />

    <fragment
        android:id="@id/nav_about"
        android:name="io.github.tonnyl.moka.ui.about.AboutFragment"
        android:label="About" />

    <fragment
        android:id="@+id/profile_fragment"
        android:name="io.github.tonnyl.moka.ui.profile.ProfileFragment"
        tools:label="User Profile"
        tools:layout="@layout/fragment_container">

        <argument
            android:name="login"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="profileType"
            android:defaultValue="NOT_SPECIFIED"
            app:argType="io.github.tonnyl.moka.ui.profile.ProfileType" />

        <action
            android:id="@+id/action_user_profile_to_users"
            app:destination="@id/users_fragment" />

        <action
            android:id="@+id/action_user_profile_to_repositories"
            app:destination="@id/repositories_fragment" />

    </fragment>

    <fragment
        android:id="@+id/repository_fragment"
        android:name="io.github.tonnyl.moka.ui.repository.RepositoryFragment"
        tools:label="Repository"
        tools:layout="@layout/fragment_container">

        <argument
            android:name="login"
            app:argType="string" />

        <argument
            android:name="name"
            app:argType="string" />

        <argument
            android:name="profileType"
            android:defaultValue="NOT_SPECIFIED"
            app:argType="io.github.tonnyl.moka.ui.profile.ProfileType" />

    </fragment>

    <fragment
        android:id="@+id/about_fragment"
        android:name="io.github.tonnyl.moka.ui.about.AboutFragment"
        tools:label="About"
        tools:layout="@layout/fragment_container" />

    <fragment
        android:id="@+id/settings_fragment"
        android:name="io.github.tonnyl.moka.ui.settings.SettingsFragment"
        tools:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/users_fragment"
        android:name="io.github.tonnyl.moka.ui.users.UsersFragment"
        tools:label="Users"
        tools:layout="@layout/fragment_users">

        <argument
            android:name="login"
            app:argType="string" />

        <argument
            android:name="usersType"
            app:argType="io.github.tonnyl.moka.ui.users.UsersType" />

    </fragment>

    <fragment
        android:id="@+id/repositories_fragment"
        android:name="io.github.tonnyl.moka.ui.repositories.RepositoriesFragment"
        tools:label="Repositories"
        tools:layout="@layout/fragment_repositories">

        <argument
            android:name="login"
            app:argType="string" />

        <argument
            android:name="repositoriesType"
            app:argType="io.github.tonnyl.moka.ui.repositories.RepositoryType" />

        <argument
            android:name="profileType"
            app:argType="io.github.tonnyl.moka.ui.profile.ProfileType" />

    </fragment>

    <fragment
        android:id="@+id/issues_fragment"
        android:name="io.github.tonnyl.moka.ui.issues.IssuesFragment"
        android:label="Issues"
        tools:layout="@layout/fragment_issues">

        <argument
            android:name="owner"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/prs_fragment"
        android:name="io.github.tonnyl.moka.ui.prs.PullRequestsFragment"
        android:label="PullRequests"
        tools:layout="@layout/fragment_prs">

        <argument
            android:name="owner"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/issue_fragment"
        android:name="io.github.tonnyl.moka.ui.issue.IssueFragment"
        android:label="Issue"
        tools:layout="@layout/fragment_pr">

        <argument
            android:name="repositoryOwner"
            app:argType="string" />

        <argument
            android:name="repositoryName"
            app:argType="string" />

        <argument
            android:name="number"
            app:argType="integer"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/pr_fragment"
        android:name="io.github.tonnyl.moka.ui.pr.PullRequestFragment"
        android:label="PullRequest"
        tools:layout="@layout/fragment_pr">

        <argument
            android:name="number"
            app:argType="integer" />

        <argument
            android:name="repositoryOwner"
            app:argType="string" />

        <argument
            android:name="repositoryName"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/edit_profile_fragment"
        android:name="io.github.tonnyl.moka.ui.profile.edit.EditProfileFragment"
        android:label="EditProfile"
        tools:layout="@layout/fragment_container">

        <argument
            android:name="login"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="bio"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="url"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="company"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="location"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="twitter"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/emojis_fragment"
        android:name="io.github.tonnyl.moka.ui.emojis.EmojisFragment"
        android:label="EmojisFragment"
        tools:layout="@layout/fragment_emojis" />

    <fragment
        android:id="@+id/search_emoji_fragment"
        android:name="io.github.tonnyl.moka.ui.emojis.search.SearchEmojiFragment"
        android:label="SearchEmojiFragment"
        tools:layout="@layout/fragment_search_emoji" />

    <fragment
        android:id="@+id/edit_status_fragment"
        android:name="io.github.tonnyl.moka.ui.profile.status.EditStatusFragment"
        android:label="EditStatusFragment"
        tools:layout="@layout/fragment_container">

        <argument
            android:name="status"
            android:defaultValue="@null"
            app:argType="io.github.tonnyl.moka.ui.profile.status.EditStatusArgs"
            app:nullable="true" />

    </fragment>

    <dialog
        android:id="@+id/account_dialog"
        android:name="io.github.tonnyl.moka.ui.account.AccountDialogFragment"
        tools:label="Account"
        tools:layout="@layout/dialog_fragment_account" />

    <dialog
        android:id="@+id/add_reaction_dialog"
        android:name="io.github.tonnyl.moka.ui.reaction.AddReactionDialogFragment"
        tools:label="Add reaction"
        tools:layout="@layout/fragment_container">

        <argument
            android:name="viewer_has_reacted_contents"
            android:defaultValue="@null"
            app:argType="string[]"
            app:nullable="true" />

        <argument
            android:name="reactable_id"
            app:argType="string"
            app:nullable="false" />

    </dialog>

</navigation>