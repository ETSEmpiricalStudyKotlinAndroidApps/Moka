<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.format.DateUtils" />

        <variable
            name="pullRequest"
            type="io.github.tonnyl.moka.data.item.PullRequestItem" />

        <variable
            name="actions"
            type="io.github.tonnyl.moka.ui.prs.PullRequestItemActions" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/issue_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{() -> actions.openPullRequestItem(pullRequest)}"
        android:orientation="vertical"
        android:padding="@dimen/list_item_spacing">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/issue_item_status_image"
            android:layout_width="@dimen/issue_item_status_image_size"
            android:layout_height="@dimen/issue_item_status_image_size"
            android:src="@{pullRequest.merged ? @drawable/ic_pr_merged : pullRequest.closed ? @drawable/ic_pr_closed : @drawable/ic_pr_open}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_issue_open_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_pr_item_number"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textFuture="@{@string/issue_pr_number(pullRequest.number)}"
            tools:text="@sample/issue.json/issues/number" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_pr_item_title"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_spacing"
            android:layout_marginEnd="@dimen/list_item_spacing"
            android:textColor="@color/colorOnBackground"
            app:layout_constraintEnd_toStartOf="@id/issue_pr_item_number"
            app:layout_constraintStart_toEndOf="@id/issue_item_status_image"
            app:layout_constraintTop_toTopOf="parent"
            app:textFuture="@{pullRequest.title}"
            tools:text="@sample/issue.json/issues/title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/issue_pr_item_avatar"
            android:layout_width="@dimen/issue_item_author_avatar_size"
            android:layout_height="@dimen/issue_item_author_avatar_size"
            android:layout_marginTop="@dimen/list_item_spacing"
            android:onClick="@{() -> actions.openProfile(pullRequest.actor.login)}"
            app:avatarUrl="@{pullRequest.actor.avatarUrl.toString()}"
            app:layout_constraintStart_toStartOf="@id/issue_pr_item_title"
            app:layout_constraintTop_toBottomOf="@id/issue_pr_item_title"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_pr_item_author"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_spacing"
            android:textColor="@color/colorOnBackground"
            app:layout_constraintBottom_toBottomOf="@id/issue_pr_item_avatar"
            app:layout_constraintStart_toEndOf="@id/issue_pr_item_avatar"
            app:layout_constraintTop_toTopOf="@id/issue_pr_item_avatar"
            app:textFuture="@{pullRequest.actor.login}"
            tools:text="@sample/issue.json/issues/author" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_pr_item_created_at"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/issue_pr_item_avatar"
            app:textFuture="@{DateUtils.getRelativeTimeSpanString(pullRequest.createdAt.time, System.currentTimeMillis(), DateUtils.MINUTE_IN_MILLIS)}"
            tools:text="@sample/issue.json/issues/createdAt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>