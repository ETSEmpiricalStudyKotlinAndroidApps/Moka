<resources>

    <!-- For titles, e.g. Repository Detail, Profile Detail -->
    <style name="TextAppearance.Moka.H1" parent="TextAppearance.MaterialComponents.Headline5" />

    <!-- List item primary text, e.g. timeline event titles, notification titles -->
    <style name="TextAppearance.Moka.ListPrimary" parent="TextAppearance.MaterialComponents.Body1" />

    <!-- List item primary text, e.g. trending repository titles, issue titles -->
    <style name="TextAppearance.Moka.ListPrimary.Colored" parent="TextAppearance.Moka.ListPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- List item secondary text, e.g. timeline event descriptions, notification descriptions -->
    <style name="TextAppearance.Moka.ListSecondary" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- List headers -->
    <style name="TextAppearance.Moka.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Moka.AccountDialog.ViewProfileButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.Chip
        </item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>

    <style name="TextAppearance.Moka.Count" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1
        </item>
    </style>

    <style name="TextAppearance.Moka.ContentCategory" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SearchBarIcon">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">center</item>
        <!--<item name="android:tint">?colorIcon</item>-->
    </style>

    <style name="SearchTabLabelTextAppearance" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:padding">@dimen/fragment_content_padding</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="LinearLayoutCountTypeStyle">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/fragment_content_padding</item>
        <item name="android:paddingBottom">@dimen/fragment_content_padding</item>
    </style>

    <style name="LinearLayoutTitleContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/fragment_content_padding</item>
        <item name="android:paddingEnd">@dimen/fragment_content_padding</item>
        <item name="android:paddingTop">@dimen/fragment_content_padding_half</item>
        <item name="android:paddingBottom">@dimen/fragment_content_padding_half</item>
    </style>

    <style name="LinearLayoutTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/fragment_content_padding</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="LinearLayoutContentStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/fragment_content_padding</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="LinearLayoutKeyValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/fragment_content_padding</item>
    </style>

    <style name="LinearLayoutValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">@dimen/fragment_content_padding</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="layoutManager">LinearLayoutManager</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="Widget.Moka.AddReactionButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:checkable">true</item>
    </style>

</resources>
