<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_trending_repository_developer_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingStart="@dimen/fragment_content_padding_half"
    android:paddingEnd="@dimen/fragment_content_padding_half">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_trending_repository_developer_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        tools:src="@tools:sample/avatars" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_content_padding_half" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_trending_repository_developer_name"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="12sp"
        tools:text="@sample/user.json/users/login" />

</LinearLayout>