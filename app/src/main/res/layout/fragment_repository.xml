<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:liftOnScroll="true"
        app:liftOnScrollTargetViewId="@id/repository_scroll_view">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ToolbarTheme"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/repository"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:titleTextColor="@color/colorControlNormal" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/repository_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="?actionBarSize">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/repository_owner_avatar"
                android:layout_width="@dimen/repository_avatar_size"
                android:layout_height="@dimen/repository_avatar_size"
                android:layout_marginStart="@dimen/fragment_content_padding"
                android:layout_marginTop="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toStartOf="@id/repository_owner_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/repository_owner_name"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/repository_spacing"
                android:layout_marginEnd="@dimen/repository_spacing"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:textColor="@color/list_item_text_title"
                android:textSize="@dimen/list_item_title_text"
                app:layout_constraintBottom_toTopOf="@id/repository_owner_login"
                app:layout_constraintEnd_toStartOf="@id/repository_owner_follow_unfollow"
                app:layout_constraintStart_toEndOf="@id/repository_owner_avatar"
                app:layout_constraintTop_toTopOf="@id/repository_owner_avatar"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="@sample/user.json/users/name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/repository_owner_login"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textColor="@color/list_item_text_caption"
                android:textSize="@dimen/list_item_caption_text"
                app:layout_constraintBottom_toBottomOf="@id/repository_owner_avatar"
                app:layout_constraintEnd_toEndOf="@id/repository_owner_name"
                app:layout_constraintStart_toStartOf="@id/repository_owner_name"
                app:layout_constraintTop_toBottomOf="@id/repository_owner_name"
                tools:text="@sample/user.json/users/login" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/repository_owner_follow_unfollow"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/fragment_content_padding"
                android:text="@string/user_profile_follow"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/users_follow_unfollow_button_text"
                app:layout_constraintBottom_toBottomOf="@id/repository_owner_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/repository_owner_name"
                app:layout_constraintTop_toTopOf="@id/repository_owner_avatar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/repository_name"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_content_padding"
                android:gravity="start"
                android:paddingStart="@dimen/fragment_content_padding"
                android:paddingEnd="@dimen/fragment_content_padding"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintBottom_toTopOf="@id/repository_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_owner_avatar"
                tools:text="@sample/repository.json/repositories/name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/repository_description"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/fragment_content_padding"
                android:textColor="@color/colorTextSecondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_name"
                tools:text="@sample/repository.json/repositories/description" />

            <View
                android:id="@+id/repository_divider_between_tabs_and_description"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_size"
                android:background="@color/colorDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_description" />

            <LinearLayout
                android:id="@+id/repository_watchers_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="@dimen/fragment_content_padding"
                android:paddingTop="@dimen/fragment_content_padding"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toStartOf="@id/repository_stargazers_text_layout"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_divider_between_tabs_and_description">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_watchers_count_text"
                    style="@style/TextAppearance.Moka.Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@sample/repository.json/repositories/watcherCount" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_content_padding_half" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.Moka.ContentCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_watchers" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repository_stargazers_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/fragment_content_padding"
                android:paddingBottom="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toStartOf="@id/repository_forks_text_layout"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/repository_watchers_text_layout"
                app:layout_constraintTop_toBottomOf="@id/repository_divider_between_tabs_and_description">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_stargazers_count_text"
                    style="@style/TextAppearance.Moka.Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@sample/repository.json/repositories/stargazerCount" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_content_padding_half" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.Moka.ContentCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_stargazers" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repository_forks_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingTop="@dimen/fragment_content_padding"
                android:paddingEnd="@dimen/fragment_content_padding"
                android:paddingBottom="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/repository_stargazers_text_layout"
                app:layout_constraintTop_toBottomOf="@id/repository_divider_between_tabs_and_description">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_forks_count_text"
                    style="@style/TextAppearance.Moka.Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    tools:text="@sample/repository.json/repositories/forkCount" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_content_padding_half" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.Moka.ContentCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_forks" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repository_issues_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="@dimen/fragment_content_padding"
                android:paddingTop="@dimen/fragment_content_padding"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toStartOf="@id/repository_stargazers_text_layout"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_watchers_text_layout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_issues_count_text"
                    style="@style/TextAppearance.Moka.Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@sample/repository.json/repositories/issueCount" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_content_padding_half" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.Moka.ContentCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_issues" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repository_pull_requests_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/fragment_content_padding"
                android:paddingBottom="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toStartOf="@id/repository_forks_text_layout"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/repository_watchers_text_layout"
                app:layout_constraintTop_toBottomOf="@id/repository_watchers_text_layout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_pull_requests_count_text"
                    style="@style/TextAppearance.Moka.Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@sample/repository.json/repositories/pullRequestCount" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_content_padding_half" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.Moka.ContentCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_pull_requests" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repository_projects_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingTop="@dimen/fragment_content_padding"
                android:paddingEnd="@dimen/fragment_content_padding"
                android:paddingBottom="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/repository_stargazers_text_layout"
                app:layout_constraintTop_toBottomOf="@id/repository_watchers_text_layout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_projects_count_text"
                    style="@style/TextAppearance.Moka.Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    tools:text="@sample/repository.json/repositories/projectCount" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_content_padding_half" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.Moka.ContentCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_projects" />

            </LinearLayout>

            <View
                android:id="@+id/repository_divider_between_tabs_and_basic_info"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_size"
                android:background="@color/colorDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_issues_text_layout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/repository_basic_info_category_title"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/fragment_content_padding"
                android:text="@string/repository_basic_info"
                app:fontFamily="sans-serif-medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_divider_between_tabs_and_basic_info" />

            <LinearLayout
                android:id="@+id/repository_branch_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_basic_info_category_title">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_branches" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_branch_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/fragment_content_padding"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorTextPrimary"
                    tools:text="@sample/repository.json/repositories/branch" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repository_releases_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_branch_layout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_releases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_releases" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_releases_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/fragment_content_padding"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorTextPrimary"
                    tools:text="@sample/repository.json/repositories/releases" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repository_language_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_releases_layout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_language" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_language_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/fragment_content_padding"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorTextPrimary"
                    tools:text="@sample/repository.json/repositories/primaryLanguage/name" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repository_license_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_language_layout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_license" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_license_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/fragment_content_padding"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorTextPrimary"
                    tools:text="@sample/repository.json/repositories/license" />

            </LinearLayout>

            <View
                android:id="@+id/repository_divider_between_basic_info_and_topics"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_size"
                android:background="@color/colorDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_license_layout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/repository_topics_category_title"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/fragment_content_padding"
                android:text="@string/repository_topics"
                app:fontFamily="sans-serif-medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_divider_between_basic_info_and_topics" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/repository_topics_category_see_all"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_organizations_see_all"
                android:textColor="@color/colorTextAccent"
                app:layout_constraintBottom_toBottomOf="@id/repository_topics_category_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/repository_topics_category_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/repository_topics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="@dimen/fragment_content_padding_half"
                android:paddingEnd="@dimen/fragment_content_padding_half"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_topics_category_title"
                tools:itemCount="10"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_repository_topic" />

            <View
                android:id="@+id/repository_divider_between_topics_and_readme"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_size"
                android:layout_marginTop="@dimen/fragment_content_padding"
                android:background="@color/colorDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_topics" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/repository_readme_category_title"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/fragment_content_padding"
                android:text="@string/repository_readme"
                app:fontFamily="sans-serif-medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_divider_between_topics_and_readme"
                app:textAllCaps="true" />

            <WebView
                android:id="@+id/repository_readme_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_content_padding"
                android:layout_marginEnd="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_readme_category_title"
                tools:ignore="WebViewLayout" />

            <View
                android:id="@+id/repository_divider_between_readme_and_more_info"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_size"
                android:layout_marginTop="@dimen/fragment_content_padding"
                android:background="@color/colorDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_readme_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/repository_more_info_category_title"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/fragment_content_padding"
                android:text="@string/repository_more_info"
                app:fontFamily="sans-serif-medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_divider_between_readme_and_more_info" />

            <LinearLayout
                android:id="@+id/repository_created_on_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_more_info_category_title">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_created_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_created_on" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_created_on_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/fragment_content_padding"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorTextPrimary"
                    tools:text="@sample/repository.json/repositories/updateAt" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repository_updated_on_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/fragment_content_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repository_created_on_layout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_updated_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repository_updated_on" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repository_updated_on_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/fragment_content_padding"
                    android:paddingEnd="0dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorTextPrimary"
                    tools:text="@sample/repository.json/repositories/updateAt" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/repository_bottom_app_bar"
        style="@style/Widget.MaterialComponents.BottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabAlignmentMode="end"
        app:fabAnimationMode="slide"
        app:fabCradleMargin="0dp"
        app:fabCradleRoundedCornerRadius="0dp"
        app:fabCradleVerticalOffset="0dp"
        app:hideOnScroll="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/repository_star_fab"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:fabSize="normal"
        app:layout_anchor="@id/repository_bottom_app_bar"
        app:srcCompat="@drawable/ic_star_24" />

