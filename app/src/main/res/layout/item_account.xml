<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="io.github.tonnyl.moka.data.AuthenticatedUser" />

        <import type="io.github.tonnyl.moka.ui.account.AccountViewModel" />

        <variable
            name="viewModel"
            type="AccountViewModel" />

        <variable
            name="account"
            type="AuthenticatedUser" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{() -> viewModel.onSelectNewAccount(account.id)}"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/account_avatar"
                android:layout_width="@dimen/regular_icon_size"
                android:layout_height="@dimen/regular_icon_size"
                android:scaleType="centerCrop"
                app:avatarUrl="@{account.avatarUrl}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/account_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/fragment_content_padding_half"
                android:paddingEnd="@dimen/fragment_content_padding_half"
                android:textAppearance="@style/TextAppearance.Moka.ListPrimary"
                app:layout_constraintBottom_toTopOf="@id/account_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/account_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:textFuture="@{account.login}"
                tools:text="@sample/user.json/users/login" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/account_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/fragment_content_padding_half"
                android:paddingEnd="@dimen/fragment_content_padding_half"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/account_avatar"
                app:layout_constraintTop_toBottomOf="@id/account_login"
                app:textFuture="@{String.valueOf(account.id)}"
                tools:text="1332948" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/account_view_profile_button"
            style="@style/Widget.Moka.AccountDialog.ViewProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:onClick="@{() -> viewModel.onViewProfile()}"
            android:text="@string/accounts_view_profile"
            app:goneUnless="@{viewModel.currentId == account.id}"
            tools:visibility="visible" />

    </LinearLayout>

</layout>