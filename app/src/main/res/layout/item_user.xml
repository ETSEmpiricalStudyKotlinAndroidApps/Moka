<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_use_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/list_item_spacing">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_user_avatar"
        android:layout_width="@dimen/repository_list_avatar_width"
        android:layout_height="@dimen/repository_list_avatar_height"
        tools:src="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/item_user_follow_unfollow"
        style="@style/TextAppearance.MaterialComponents.Button"
        android:layout_width="@dimen/users_follow_unfollow_button_width"
        android:layout_height="@dimen/users_follow_unfollow_button_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_profile_follow"
        android:text="@string/user_profile_follow"
        android:textAllCaps="false"
        android:textColor="@color/user_profile_follow_unfollow_text"
        android:textSize="@dimen/users_follow_unfollow_button_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_user_name"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_spacing"
        android:layout_toStartOf="@id/item_user_follow_unfollow"
        android:layout_toEndOf="@id/item_user_avatar"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/list_item_text_title"
        android:textSize="@dimen/list_item_title_text"
        tools:text="@sample/user.json/users/name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_user_login"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_user_name"
        android:layout_marginStart="@dimen/list_item_spacing"
        android:layout_toStartOf="@id/item_user_follow_unfollow"
        android:layout_toEndOf="@id/item_user_avatar"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textColor="@color/list_item_text_caption"
        android:textSize="@dimen/list_item_caption_text"
        tools:text="@sample/user.json/users/login" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_user_description"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_user_login"
        android:layout_marginStart="@dimen/list_item_spacing"
        android:layout_marginEnd="@dimen/list_item_spacing"
        android:layout_toEndOf="@id/item_user_avatar"
        android:fontFamily="sans-serif"
        android:textColor="@color/list_item_text_caption"
        android:textSize="@dimen/list_item_caption_text"
        tools:text="@sample/user.json/users/bio" />

</RelativeLayout>