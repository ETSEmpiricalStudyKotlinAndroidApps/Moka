<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="avatar"
            type="java.lang.String" />

        <variable
            name="username"
            type="java.lang.String" />

    </data>

    <LinearLayout
        android:id="@+id/item_trending_repository_developer_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingStart="@dimen/fragment_content_padding_half"
        android:paddingEnd="@dimen/fragment_content_padding_half">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_trending_repository_developer_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:avatarUrl="@{avatar}"
            tools:src="@tools:sample/avatars" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_content_padding_half" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_trending_repository_developer_name"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="12sp"
            app:textFuture="@{username}"
            tools:text="@sample/user.json/users/login" />

    </LinearLayout>

</layout>