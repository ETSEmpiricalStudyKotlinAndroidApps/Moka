<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="io.github.tonnyl.moka.network.NetworkState" />

        <import type="io.github.tonnyl.moka.network.Status" />

        <variable
            name="state"
            type="NetworkState" />

        <variable
            name="actions"
            type="io.github.tonnyl.moka.ui.PagingNetworkStateActions" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_network_state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fragment_content_padding">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_network_state_error_message"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/common_error_requesting_data"
            app:invisibleUnless="@{state.status == Status.ERROR}"
            app:layout_constraintBottom_toTopOf="@id/item_network_state_retry_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_network_state_retry_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> actions.retryLoadPreviousNext()}"
            android:text="@string/common_retry"
            android:textColor="@color/colorTextAccent"
            app:invisibleUnless="@{state.status == Status.ERROR}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_network_state_error_message" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/item_network_state_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:invisibleUnless="@{state.status == Status.LOADING}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>