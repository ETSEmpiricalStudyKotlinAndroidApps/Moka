<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_activity_main"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="io.github.tonnyl.moka.ui.main.MainFragment"
        android:label="Main"
        tools:layout="@layout/fragment_main" />

    <fragment
        android:id="@+id/auth_fragment"
        android:name="io.github.tonnyl.moka.ui.auth.AuthFragment"
        tools:label="Auth"
        tools:layout="@layout/fragment_auth">

        <argument
            android:name="code"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <action
        android:id="@+id/action_to_main"
        app:destination="@id/main_fragment" />

    <action
        android:id="@+id/action_to_auth"
        app:destination="@id/auth_fragment" />

</navigation>