<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.format.DateUtils" />

        <import type="io.github.tonnyl.moka.ui.common.IssuePRActions" />

        <variable
            name="avatar"
            type="java.lang.String" />

        <variable
            name="number"
            type="java.lang.Integer" />

        <variable
            name="login"
            type="java.lang.String" />

        <variable
            name="title"
            type="java.lang.String" />

        <variable
            name="updateTimeInMillis"
            type="java.lang.Long" />

        <variable
            name="statusDrawableResId"
            type="java.lang.Integer" />

        <variable
            name="actions"
            type="IssuePRActions" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/issue_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="@{() -> actions.openIssueOrPR(number, title)}"
        android:orientation="vertical"
        android:padding="@dimen/list_item_spacing">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/issue_item_status_image"
            android:layout_width="@dimen/issue_item_status_image_size"
            android:layout_height="@dimen/issue_item_status_image_size"
            app:imageResId="@{statusDrawableResId}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_issue_open_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_pr_item_number"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textFuture='@{"#" + number}'
            tools:text="@sample/issue.json/issues/number" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_pr_item_title"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_spacing"
            android:layout_marginEnd="@dimen/list_item_spacing"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintEnd_toStartOf="@id/issue_pr_item_number"
            app:layout_constraintStart_toEndOf="@id/issue_item_status_image"
            app:layout_constraintTop_toTopOf="parent"
            app:textFuture="@{title}"
            tools:text="@sample/issue.json/issues/title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/issue_pr_item_avatar"
            android:layout_width="@dimen/issue_item_author_avatar_size"
            android:layout_height="@dimen/issue_item_author_avatar_size"
            android:layout_marginTop="@dimen/list_item_spacing"
            android:onClick="@{() -> actions.openProfile(login)}"
            app:avatarUrl="@{avatar}"
            app:layout_constraintStart_toStartOf="@id/issue_pr_item_title"
            app:layout_constraintTop_toBottomOf="@id/issue_pr_item_title"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_pr_item_author"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_spacing"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintBottom_toBottomOf="@id/issue_pr_item_avatar"
            app:layout_constraintStart_toEndOf="@id/issue_pr_item_avatar"
            app:layout_constraintTop_toTopOf="@id/issue_pr_item_avatar"
            app:textFuture="@{login}"
            tools:text="@sample/issue.json/issues/author" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_pr_item_created_at"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/issue_pr_item_avatar"
            app:textFuture="@{DateUtils.getRelativeTimeSpanString(updateTimeInMillis, System.currentTimeMillis(), DateUtils.MINUTE_IN_MILLIS)}"
            tools:text="@sample/issue.json/issues/createdAt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>