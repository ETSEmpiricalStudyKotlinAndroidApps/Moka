<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorError">#C51162</item>

        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorOnBackground">#000000</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>
        <item name="scrimBackground">@color/mtrl_scrim_color</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.MaterialComponents.Headline1
        </item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MaterialComponents.Headline2
        </item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MaterialComponents.Headline3
        </item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MaterialComponents.Headline4
        </item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorSecondary">@color/colorControlNormal</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="TextAppearance.Moka.FadingSnackbarAction" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Moka.Count" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="TextAppearance.Moka.ContentCategory" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SearchBarIcon">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">center</item>
        <!--<item name="android:tint">?colorIcon</item>-->
    </style>

    <style name="SearchTabLabelTextAppearance" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:padding">@dimen/fragment_content_padding</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="LinearLayoutCountTypeStyle">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/fragment_content_padding</item>
        <item name="android:paddingBottom">@dimen/fragment_content_padding</item>
    </style>

    <style name="LinearLayoutTitleContentStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/fragment_content_padding</item>
        <item name="android:paddingEnd">@dimen/fragment_content_padding</item>
        <item name="android:paddingTop">@dimen/fragment_content_padding_half</item>
        <item name="android:paddingBottom">@dimen/fragment_content_padding_half</item>
    </style>

    <style name="LinearLayoutTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/fragment_content_padding</item>
        <item name="android:drawableTint">@color/colorTextSecondary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="LinearLayoutContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="LinearLayoutKeyValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/fragment_content_padding</item>
    </style>

    <style name="LinearLayoutValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">@dimen/fragment_content_padding</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="layoutManager">LinearLayoutManager</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

</resources>
