<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_repository_user_avatar"
        android:layout_width="@dimen/repository_list_avatar_width"
        android:layout_height="@dimen/repository_list_avatar_height"
        android:layout_marginStart="@dimen/list_item_spacing"
        android:layout_marginTop="@dimen/list_item_spacing"
        tools:src="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/item_repository_star"
        android:layout_width="@dimen/repository_list_star_button_width"
        android:layout_height="@dimen/repository_list_star_button_height"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/list_item_spacing"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_star_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_repository_title"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_spacing"
        android:layout_marginTop="@dimen/list_item_spacing"
        android:layout_toStartOf="@id/item_repository_star"
        android:layout_toEndOf="@id/item_repository_user_avatar"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/list_item_text_title"
        android:textSize="@dimen/list_item_title_text"
        tools:text="@sample/repository.json/repositories/name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_repository_caption"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_repository_title"
        android:layout_marginStart="@dimen/list_item_spacing"
        android:layout_toStartOf="@id/item_repository_star"
        android:layout_toEndOf="@id/item_repository_user_avatar"
        android:fontFamily="sans-serif"
        android:textColor="@color/list_item_text_caption"
        android:textSize="@dimen/list_item_caption_text"
        tools:text="@sample/repository.json/repositories/description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/item_repository_caption"
        android:layout_marginStart="@dimen/list_item_spacing"
        android:layout_marginBottom="@dimen/list_item_spacing"
        android:layout_toStartOf="@id/item_repository_star"
        android:layout_toEndOf="@id/item_repository_user_avatar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_repository_language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/language_dot"
            android:drawablePadding="4dp"
            android:textColor="@color/list_item_text_caption"
            android:textSize="@dimen/list_item_caption_text"
            tools:text="@sample/language.json/languages/name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_repository_star_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_spacing"
            android:drawableStart="@drawable/ic_star_black_18"
            android:drawablePadding="@dimen/list_content_padding"
            android:textColor="@color/list_item_text_caption"
            android:textSize="@dimen/list_item_caption_text"
            tools:text="@sample/repository.json/repositories/stargazerCount" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_repository_fork_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_spacing"
            android:drawableStart="@drawable/ic_code_fork_18"
            android:drawablePadding="@dimen/list_content_padding"
            android:textColor="@color/list_item_text_caption"
            android:textSize="@dimen/list_item_caption_text"
            tools:text="@sample/repository.json/repositories/forkCount" />

    </LinearLayout>

</RelativeLayout>