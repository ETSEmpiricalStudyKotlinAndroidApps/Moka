<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_fragment_main"
    app:startDestination="@id/nav_timeline">

    <fragment
        android:id="@+id/search_fragment"
        android:name="io.github.tonnyl.moka.ui.search.SearchFragment"
        tools:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@id/nav_timeline"
        android:name="io.github.tonnyl.moka.ui.timeline.TimelineFragment"
        tools:label="Timeline"
        tools:layout="@layout/fragment_timeline" />

    <fragment
        android:id="@id/nav_explore"
        android:name="io.github.tonnyl.moka.ui.explore.ExploreFragment"
        tools:label="Explore"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@+id/user_profile_fragment"
        android:name="io.github.tonnyl.moka.ui.profile.UserProfileFragment"
        tools:label="User Profile"
        tools:layout="@layout/fragment_user_profile">

        <argument
            android:name="login"
            app:argType="string" />

        <action
            android:id="@+id/action_user_profile_to_users"
            app:destination="@id/users_fragment" />

        <action
            android:id="@+id/action_user_profile_to_repositories"
            app:destination="@id/repositories_fragment" />

    </fragment>

    <fragment
        android:id="@+id/repository_fragment"
        android:name="io.github.tonnyl.moka.ui.repository.RepositoryFragment"
        tools:label="Repository"
        tools:layout="@layout/fragment_repository">

        <argument
            android:name="login"
            app:argType="string" />

        <argument
            android:name="name"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/about_fragment"
        android:name="io.github.tonnyl.moka.ui.about.AboutFragment"
        tools:label="About"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/settings_fragment"
        android:name="io.github.tonnyl.moka.ui.settings.SettingsFragment"
        tools:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/users_fragment"
        android:name="io.github.tonnyl.moka.ui.users.UsersFragment"
        tools:label="Users"
        tools:layout="@layout/fragment_users">

        <argument
            android:name="login"
            app:argType="string" />

        <!--available type: followers/following-->
        <argument
            android:name="users_type"
            app:argType="string" />

        <argument
            android:name="username"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/repositories_fragment"
        android:name="io.github.tonnyl.moka.ui.repositories.RepositoriesFragment"
        tools:label="Repositories"
        tools:layout="@layout/fragment_repositories">

        <argument
            android:name="login"
            app:argType="string" />

        <argument
            android:name="repositories_type"
            app:argType="string" />

        <argument
            android:name="username"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/issues_fragment"
        android:name="io.github.tonnyl.moka.ui.issues.IssuesFragment"
        android:label="Issues"
        tools:layout="@layout/fragment_issues">

        <argument
            android:name="owner"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/prs_fragment"
        android:name="io.github.tonnyl.moka.ui.prs.PullRequestsFragment"
        android:label="PullRequests"
        tools:layout="@layout/fragment_prs">

        <argument
            android:name="owner"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/issue_fragment"
        android:name="io.github.tonnyl.moka.ui.issue.IssueFragment"
        android:label="Issue"
        tools:layout="@layout/fragment_issue_pr">

        <argument
            android:name="owner"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="number"
            app:argType="integer"
            app:nullable="false" />

        <argument
            android:name="title"
            app:argType="string"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/pr_fragment"
        android:name="io.github.tonnyl.moka.ui.pr.PullRequestFragment"
        android:label="PullRequest"
        tools:layout="@layout/fragment_issue_pr">

        <argument
            android:name="owner"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="number"
            app:argType="integer"
            app:nullable="false" />

        <argument
            android:name="title"
            app:argType="string"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/edit_profile_fragment"
        android:name="io.github.tonnyl.moka.ui.profile.edit.EditProfileFragment"
        android:label="EditProfile"
        tools:layout="@layout/fragment_edit_profile">

        <argument
            android:name="login"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="email"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="bio"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="url"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="company"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="location"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <action
        android:id="@+id/action_timeline_to_user_profile"
        app:destination="@id/user_profile_fragment" />

    <action
        android:id="@+id/action_timeline_to_repository"
        app:destination="@id/repository_fragment" />

    <action
        android:id="@+id/action_to_about"
        app:destination="@id/about_fragment" />

    <action
        android:id="@+id/action_to_settings"
        app:destination="@id/settings_fragment" />

    <action
        android:id="@+id/action_to_repositories"
        app:destination="@id/repositories_fragment" />

    <action
        android:id="@+id/action_to_repository"
        app:destination="@id/repository_fragment" />

    <action
        android:id="@+id/action_to_issues"
        app:destination="@id/issues_fragment" />

    <action
        android:id="@+id/action_to_prs"
        app:destination="@id/prs_fragment" />

    <action
        android:id="@+id/action_to_issue"
        app:destination="@id/issue_fragment" />

    <action
        android:id="@+id/action_to_pr"
        app:destination="@id/pr_fragment" />

    <action
        android:id="@+id/action_to_edit_profile"
        app:destination="@id/edit_profile_fragment" />

</navigation>