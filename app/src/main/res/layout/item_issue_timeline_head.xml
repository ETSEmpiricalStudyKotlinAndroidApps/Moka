<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="io.github.tonnyl.moka.ui.issue.IssueViewModel" />

        <import type="android.text.format.DateUtils" />

        <variable
            name="viewModel"
            type="IssueViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/issue_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/list_item_spacing"
        android:paddingBottom="@dimen/list_item_spacing">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_spacing"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Moka.ListPrimary.Colored"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textFuture="@{@string/repository_name_with_username(viewModel.args.repositoryOwner, viewModel.args.repositoryName)}"
            tools:text="@sample/notification.json/notification/repo_full_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_title"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_item_spacing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/issue_repo_name"
            app:textFuture="@{viewModel.issueLiveData.title}"
            tools:text="@sample/issue.json/issues/title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_info"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/list_item_spacing"
            android:paddingEnd="@dimen/list_item_spacing"
            app:issueInfo="@{viewModel.issueLiveData}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/issue_title"
            tools:text="#234 · created by tonny · 3 days ago" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/issue_comment_avatar"
            android:layout_width="@dimen/issue_timeline_avatar_size"
            android:layout_height="@dimen/issue_timeline_avatar_size"
            android:layout_marginStart="@dimen/list_item_spacing"
            android:layout_marginTop="@dimen/list_item_spacing"
            app:avatarUrl="@{viewModel.issueLiveData.author.avatarUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/issue_info"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/issue_comment_more"
            android:layout_width="@dimen/regular_icon_size"
            android:layout_height="@dimen/regular_icon_size"
            android:padding="@dimen/fragment_content_padding_half"
            android:src="@drawable/ic_more_vert_24"
            app:layout_constraintBottom_toBottomOf="@id/issue_comment_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/issue_comment_avatar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/issue_comment_add_reaction"
            android:layout_width="@dimen/regular_icon_size"
            android:layout_height="@dimen/regular_icon_size"
            android:layout_marginStart="@dimen/fragment_content_padding_half"
            android:padding="@dimen/fragment_content_padding_half"
            android:src="@drawable/ic_emoji_emotions_24"
            app:layout_constraintBottom_toBottomOf="@id/issue_comment_more"
            app:layout_constraintEnd_toStartOf="@id/issue_comment_more"
            app:layout_constraintTop_toTopOf="@id/issue_comment_more" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_comment_username"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/list_item_spacing"
            android:paddingEnd="@dimen/list_item_spacing"
            app:layout_constraintBottom_toTopOf="@id/issue_comment_created_at"
            app:layout_constraintEnd_toStartOf="@id/issue_comment_author_association"
            app:layout_constraintStart_toEndOf="@id/issue_comment_avatar"
            app:layout_constraintTop_toTopOf="@id/issue_comment_avatar"
            app:layout_constraintVertical_chainStyle="spread"
            app:textFuture="@{viewModel.issueLiveData.author.login}"
            tools:text="@sample/issue_timeline.json/timeline/author" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_comment_author_association"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/list_item_spacing"
            app:authorAssociation="@{viewModel.issueLiveData.authorAssociation}"
            app:layout_constraintBottom_toBottomOf="@id/issue_comment_avatar"
            app:layout_constraintEnd_toStartOf="@id/issue_comment_add_reaction"
            app:layout_constraintStart_toEndOf="@id/issue_comment_username"
            app:layout_constraintTop_toTopOf="@id/issue_comment_avatar"
            tools:text="@sample/issue_timeline.json/timeline/commentAuthorAssociation" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/issue_comment_created_at"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/list_item_spacing"
            android:paddingEnd="0dp"
            app:layout_constraintBottom_toBottomOf="@id/issue_comment_avatar"
            app:layout_constraintEnd_toStartOf="@id/issue_comment_author_association"
            app:layout_constraintStart_toEndOf="@id/issue_comment_avatar"
            app:layout_constraintTop_toBottomOf="@id/issue_comment_username"
            app:textFuture="@{DateUtils.getRelativeTimeSpanString(viewModel.issueLiveData.createdAt.time, System.currentTimeMillis(), DateUtils.MINUTE_IN_MILLIS)}"
            tools:text="@sample/issue_timeline.json/timeline/createdAt" />

        <io.github.tonnyl.moka.widget.ThemedWebView
            android:id="@+id/issue_comment_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_spacing"
            android:layout_marginTop="@dimen/list_item_spacing"
            android:layout_marginEnd="@dimen/list_item_spacing"
            app:htmlContent="@{viewModel.issueLiveData.bodyHTML}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/issue_comment_created_at" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/issue_comment_reactions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_spacing"
            android:layout_marginEnd="@dimen/list_item_spacing"
            android:orientation="horizontal"
            android:overScrollMode="never"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/issue_comment_content"
            app:reactionGroups="@{viewModel.issueLiveData.reactionGroups}"
            app:viewerCanReact="@{viewModel.issueLiveData.viewerCanReact}"
            tools:listitem="@layout/item_reaction_group" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>