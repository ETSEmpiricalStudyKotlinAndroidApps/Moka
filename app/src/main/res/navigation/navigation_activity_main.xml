<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_fragment_main_graph"
    app:startDestination="@id/nav_timeline">

    <activity
        android:id="@+id/auth_activity"
        android:name="io.github.tonnyl.moka.ui.auth.AuthActivity"
        tools:label="Auth Activity"
        tools:layout="@layout/activity_auth" />

    <fragment
        android:id="@+id/search_fragment"
        android:name="io.github.tonnyl.moka.ui.search.SearchFragment"
        tools:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/nav_timeline"
        android:name="io.github.tonnyl.moka.ui.timeline.TimelineFragment"
        tools:label="Timeline"
        tools:layout="@layout/fragment_timeline" />

    <fragment
        android:id="@id/nav_explore"
        android:name="io.github.tonnyl.moka.ui.explore.ExploreFragment"
        tools:label="Explore"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@id/nav_notifications"
        android:name="io.github.tonnyl.moka.ui.notifications.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@id/nav_projects"
        android:name="io.github.tonnyl.moka.ui.projects.ProjectsFragment"
        android:label="Projects"
        tools:layout="@layout/fragment_projects">

        <argument
            android:name="login"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="repository_name"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@id/nav_settings"
        android:name="io.github.tonnyl.moka.ui.settings.SettingsFragment"
        android:label="Settings" />

    <fragment
        android:id="@id/nav_about"
        android:name="io.github.tonnyl.moka.ui.about.AboutFragment"
        android:label="About" />

    <fragment
        android:id="@+id/profile_fragment"
        android:name="io.github.tonnyl.moka.ui.profile.ProfileFragment"
        tools:label="User Profile"
        tools:layout="@layout/fragment_profile">

        <argument
            android:name="login"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="profileType"
            android:defaultValue="NOT_SPECIFIED"
            app:argType="io.github.tonnyl.moka.ui.profile.ProfileType" />

        <action
            android:id="@+id/action_user_profile_to_users"
            app:destination="@id/users_fragment" />

        <action
            android:id="@+id/action_user_profile_to_repositories"
            app:destination="@id/repositories_fragment" />

    </fragment>

    <fragment
        android:id="@+id/repository_fragment"
        android:name="io.github.tonnyl.moka.ui.repository.RepositoryFragment"
        tools:label="Repository"
        tools:layout="@layout/fragment_repository">

        <argument
            android:name="login"
            app:argType="string" />

        <argument
            android:name="name"
            app:argType="string" />

        <argument
            android:name="profileType"
            android:defaultValue="NOT_SPECIFIED"
            app:argType="io.github.tonnyl.moka.ui.profile.ProfileType" />

    </fragment>

    <fragment
        android:id="@+id/about_fragment"
        android:name="io.github.tonnyl.moka.ui.about.AboutFragment"
        tools:label="About"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/settings_fragment"
        android:name="io.github.tonnyl.moka.ui.settings.SettingsFragment"
        tools:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/users_fragment"
        android:name="io.github.tonnyl.moka.ui.users.UsersFragment"
        tools:label="Users"
        tools:layout="@layout/fragment_users">

        <argument
            android:name="login"
            app:argType="string" />

        <argument
            android:name="usersType"
            app:argType="io.github.tonnyl.moka.ui.users.UsersType" />

    </fragment>

    <fragment
        android:id="@+id/repositories_fragment"
        android:name="io.github.tonnyl.moka.ui.repositories.RepositoriesFragment"
        tools:label="Repositories"
        tools:layout="@layout/fragment_repositories">

        <argument
            android:name="login"
            app:argType="string" />

        <argument
            android:name="repositoriesType"
            app:argType="io.github.tonnyl.moka.ui.repositories.RepositoryType" />

        <argument
            android:name="profileType"
            app:argType="io.github.tonnyl.moka.ui.profile.ProfileType" />

    </fragment>

    <fragment
        android:id="@+id/issues_fragment"
        android:name="io.github.tonnyl.moka.ui.issues.IssuesFragment"
        android:label="Issues"
        tools:layout="@layout/fragment_issues">

        <argument
            android:name="owner"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/prs_fragment"
        android:name="io.github.tonnyl.moka.ui.prs.PullRequestsFragment"
        android:label="PullRequests"
        tools:layout="@layout/fragment_prs">

        <argument
            android:name="owner"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/issue_fragment"
        android:name="io.github.tonnyl.moka.ui.issue.IssueFragment"
        android:label="Issue"
        tools:layout="@layout/fragment_pr">

        <argument
            android:name="repositoryOwner"
            app:argType="string" />

        <argument
            android:name="repositoryName"
            app:argType="string" />

        <argument
            android:name="issueItem"
            app:argType="io.github.tonnyl.moka.data.item.IssueItem" />

    </fragment>

    <fragment
        android:id="@+id/pr_fragment"
        android:name="io.github.tonnyl.moka.ui.pr.PullRequestFragment"
        android:label="PullRequest"
        tools:layout="@layout/fragment_pr">

        <argument
            android:name="pullRequestItem"
            app:argType="io.github.tonnyl.moka.data.item.PullRequestItem" />

        <argument
            android:name="repositoryOwner"
            app:argType="string" />

        <argument
            android:name="repositoryName"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/edit_profile_fragment"
        android:name="io.github.tonnyl.moka.ui.profile.edit.EditProfileFragment"
        android:label="EditProfile"
        tools:layout="@layout/fragment_edit_profile">

        <argument
            android:name="login"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="email"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="bio"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="url"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="company"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="location"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <dialog
        android:id="@+id/account_dialog"
        android:name="io.github.tonnyl.moka.ui.account.AccountDialogFragment"
        tools:label="Account"
        tools:layout="@layout/dialog_fragment_account" />

</navigation>